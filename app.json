{
  "expo": {
    "name": "금복(GEUMBOK)",
    "slug": "geumbok-mobile",
    "version": "1.0.0",
    "platforms": ["ios", "android", "web"],
    "orientation": "portrait",
    "scheme": "geumbok",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "음성 입력을 위해 마이크 접근이 필요합니다.",
        "NSSpeechRecognitionUsageDescription": "음성 인식을 위해 접근이 필요합니다."
      }
    },
    "android": {
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ]
  }
}